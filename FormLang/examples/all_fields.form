form AllFieldsTest {
    section FieldTypes {
        field text_field: text minLength 3 maxLength 50 pattern "^[A-Za-z ]+$" required;
        field email_field: email required;
        field password_field: password minLength 8 required;
        field number_field: number min 0 max 100 default 50;
        field textarea_field: textarea rows 10 cols 50 required;
        field date_field: date required;
        field checkbox_field: checkbox default 1;
        field radio_field: radio required;
        field dropdown_field: dropdown required;
        field file_field: file optional;
    }
} 