form RequireOptionalFieldTest {
    section RequireOptionalTests {
        field basic_requireoptional: require_optional required;
        
        field field_requirement: require_optional {
            required;
            default = true;
        }
        
        field section_requirement: require_optional {
            optional;
            default = false;
        }
        
        field group_requirement: require_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_requireoptional == 0 { error "Require/Optional selection is required."; }
        
        if field_requirement == 0 { error "Field requirement is required."; }
        if !field_requirement { error "Field must be required."; }
        
        if group_requirement == 0 { error "Group requirement is required."; }
    }
} 