form MainOptionalFieldTest {
    section MainOptionalTests {
        field basic_mainoptional: main_optional required;
        
        field field_main: main_optional {
            required;
            default = true;
        }
        
        field section_main: main_optional {
            optional;
            default = false;
        }
        
        field group_main: main_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_mainoptional == 0 { error "Main/Optional selection is required."; }
        
        if field_main == 0 { error "Field main status is required."; }
        if !field_main { error "Field must be main."; }
        
        if group_main == 0 { error "Group main status is required."; }
    }
} 