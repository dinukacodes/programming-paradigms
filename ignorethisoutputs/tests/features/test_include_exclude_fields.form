form IncludeExcludeFieldTest {
    section IncludeExcludeTests {
        field basic_includeexclude: include_exclude required;
        
        field item_inclusion: include_exclude {
            required;
            default = true;
        }
        
        field category_inclusion: include_exclude {
            optional;
            default = false;
        }
        
        field group_inclusion: include_exclude {
            required;
            default = true;
        }
    }

    validate {
        if basic_includeexclude == 0 { error "Include/Exclude selection is required."; }
        
        if item_inclusion == 0 { error "Item inclusion is required."; }
        if !item_inclusion { error "Item must be included."; }
        
        if group_inclusion == 0 { error "Group inclusion is required."; }
    }
} 