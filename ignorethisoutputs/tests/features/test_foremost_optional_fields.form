form ForemostOptionalFieldTest {
    section ForemostOptionalTests {
        field basic_foremostoptional: foremost_optional required;
        
        field field_foremost: foremost_optional {
            required;
            default = true;
        }
        
        field section_foremost: foremost_optional {
            optional;
            default = false;
        }
        
        field group_foremost: foremost_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_foremostoptional == 0 { error "Foremost/Optional selection is required."; }
        
        if field_foremost == 0 { error "Field foremost status is required."; }
        if !field_foremost { error "Field must be foremost."; }
        
        if group_foremost == 0 { error "Group foremost status is required."; }
    }
} 