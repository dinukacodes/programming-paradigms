form LeadingOptionalFieldTest {
    section LeadingOptionalTests {
        field basic_leadingoptional: leading_optional required;
        
        field field_leading: leading_optional {
            required;
            default = true;
        }
        
        field section_leading: leading_optional {
            optional;
            default = false;
        }
        
        field group_leading: leading_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_leadingoptional == 0 { error "Leading/Optional selection is required."; }
        
        if field_leading == 0 { error "Field leading status is required."; }
        if !field_leading { error "Field must be leading."; }
        
        if group_leading == 0 { error "Group leading status is required."; }
    }
} 