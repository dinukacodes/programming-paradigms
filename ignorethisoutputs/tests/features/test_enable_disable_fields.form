form EnableDisableFieldTest {
    section EnableDisableTests {
        field basic_enabledisable: enable_disable required;
        
        field feature_status: enable_disable {
            required;
            default = true;
        }
        
        field service_status: enable_disable {
            optional;
            default = false;
        }
        
        field system_status: enable_disable {
            required;
            default = true;
        }
    }

    validate {
        if basic_enabledisable == 0 { error "Enable/Disable selection is required."; }
        
        if feature_status == 0 { error "Feature status is required."; }
        if !feature_status { error "Feature must be enabled."; }
        
        if system_status == 0 { error "System status is required."; }
    }
} 