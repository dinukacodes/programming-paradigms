form ImportantOptionalFieldTest {
    section ImportantOptionalTests {
        field basic_importantoptional: important_optional required;
        
        field field_important: important_optional {
            required;
            default = true;
        }
        
        field section_important: important_optional {
            optional;
            default = false;
        }
        
        field group_important: important_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_importantoptional == 0 { error "Important/Optional selection is required."; }
        
        if field_important == 0 { error "Field important status is required."; }
        if !field_important { error "Field must be important."; }
        
        if group_important == 0 { error "Group important status is required."; }
    }
} 