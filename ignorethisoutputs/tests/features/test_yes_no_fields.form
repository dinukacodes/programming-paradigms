form YesNoFieldTest {
    section YesNoTests {
        field basic_yesno: yes_no required;
        
        field terms_agreement: yes_no {
            required;
            default = true;
        }
        
        field newsletter_subscription: yes_no {
            optional;
            default = false;
        }
        
        field marketing_consent: yes_no {
            required;
            default = false;
        }
    }

    validate {
        if basic_yesno == 0 { error "Yes/No selection is required."; }
        
        if terms_agreement == 0 { error "Terms agreement is required."; }
        if !terms_agreement { error "You must agree to the terms."; }
        
        if marketing_consent == 0 { error "Marketing consent is required."; }
    }
} 