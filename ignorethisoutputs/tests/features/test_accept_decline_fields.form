form AcceptDeclineFieldTest {
    section AcceptDeclineTests {
        field basic_acceptdecline: accept_decline required;
        
        field terms_acceptance: accept_decline {
            required;
            default = true;
        }
        
        field policy_acceptance: accept_decline {
            optional;
            default = false;
        }
        
        field agreement_acceptance: accept_decline {
            required;
            default = false;
        }
    }

    validate {
        if basic_acceptdecline == 0 { error "Accept/Decline selection is required."; }
        
        if terms_acceptance == 0 { error "Terms acceptance is required."; }
        if !terms_acceptance { error "You must accept the terms."; }
        
        if agreement_acceptance == 0 { error "Agreement acceptance is required."; }
    }
} 