form ScaleFieldTest {
    section ScaleTests {
        field basic_scale: scale required;
        
        field satisfaction_scale: scale {
            required;
            default = 7;
        }
        
        field difficulty_scale: scale {
            optional;
            default = 3;
        }
        
        field importance_scale: scale {
            required;
            default = 9;
        }
    }

    validate {
        if basic_scale == 0 { error "Scale value is required."; }
        if basic_scale < 1 || basic_scale > 10 { error "Scale must be between 1 and 10."; }
        
        if satisfaction_scale == 0 { error "Satisfaction scale is required."; }
        if satisfaction_scale < 1 || satisfaction_scale > 10 { error "Satisfaction scale must be between 1 and 10."; }
        
        if difficulty_scale != 0 && (difficulty_scale < 1 || difficulty_scale > 10) { error "Difficulty scale must be between 1 and 10."; }
        
        if importance_scale == 0 { error "Importance scale is required."; }
        if importance_scale < 1 || importance_scale > 10 { error "Importance scale must be between 1 and 10."; }
    }
} 