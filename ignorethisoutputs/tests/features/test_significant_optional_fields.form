form SignificantOptionalFieldTest {
    section SignificantOptionalTests {
        field basic_significantoptional: significant_optional required;
        
        field field_significant: significant_optional {
            required;
            default = true;
        }
        
        field section_significant: significant_optional {
            optional;
            default = false;
        }
        
        field group_significant: significant_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_significantoptional == 0 { error "Significant/Optional selection is required."; }
        
        if field_significant == 0 { error "Field significant status is required."; }
        if !field_significant { error "Field must be significant."; }
        
        if group_significant == 0 { error "Group significant status is required."; }
    }
} 