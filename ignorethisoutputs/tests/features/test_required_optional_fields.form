form RequiredOptionalFieldTest {
    section RequiredOptionalTests {
        field basic_requiredoptional: required_optional required;
        
        field field_required: required_optional {
            required;
            default = true;
        }
        
        field section_required: required_optional {
            optional;
            default = false;
        }
        
        field group_required: required_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_requiredoptional == 0 { error "Required/Optional selection is required."; }
        
        if field_required == 0 { error "Field required status is required."; }
        if !field_required { error "Field must be required."; }
        
        if group_required == 0 { error "Group required status is required."; }
    }
} 