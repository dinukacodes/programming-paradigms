form OnOffFieldTest {
    section OnOffTests {
        field basic_onoff: on_off required;
        
        field notifications: on_off {
            required;
            default = true;
        }
        
        field dark_mode: on_off {
            optional;
            default = false;
        }
        
        field auto_save: on_off {
            required;
            default = true;
        }
    }

    validate {
        if basic_onoff == 0 { error "On/Off selection is required."; }
        
        if notifications == 0 { error "Notification preference is required."; }
        if !notifications { error "Notifications must be enabled."; }
        
        if auto_save == 0 { error "Auto-save preference is required."; }
    }
} 