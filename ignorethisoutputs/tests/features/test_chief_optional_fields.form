form ChiefOptionalFieldTest {
    section ChiefOptionalTests {
        field basic_chiefoptional: chief_optional required;
        
        field field_chief: chief_optional {
            required;
            default = true;
        }
        
        field section_chief: chief_optional {
            optional;
            default = false;
        }
        
        field group_chief: chief_optional {
            required;
            default = true;
        }
    }

    validate {
        if basic_chiefoptional == 0 { error "Chief/Optional selection is required."; }
        
        if field_chief == 0 { error "Field chief status is required."; }
        if !field_chief { error "Field must be chief."; }
        
        if group_chief == 0 { error "Group chief status is required."; }
    }
} 