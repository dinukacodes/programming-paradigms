form ValidationTest {
    section UserInfo {
        field username: text required minLength 3 maxLength 20;
        field password: password required minLength 8;
        field confirm_password: password required;
        field email: email required;
        field age: number required min 18 max 120;
        field phone: text required;
    }

    validate {
        if username == 0 { error "Username is required."; }
        if password == 0 { error "Password is required."; }
        if confirm_password != password { error "Passwords do not match."; }
        if email == 0 { error "Email is required."; }
        if age < 18 { error "You must be at least 18 years old."; }
        if age > 120 { error "Invalid age."; }
        if phone == 0 { error "Phone number is required."; }
    }
} 